<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:spring/**/*.xml,</param-value>
  </context-param>
  <context-param>
    <param-name>ecsideMessagesLocation</param-name>
    <param-value>i18n/Messages</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
  </listener>
  <listener>
    <description>WebApplicationListener</description>
    <listener-class>com.ultrapower.eoms.common.startup.WebApplicationListener</listener-class>
  </listener>
  <listener>
    <listener-class>
			com.ultrapower.eoms.common.startup.SessionListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			com.ultrapower.eoms.common.core.component.rquery.startup.Services
		</listener-class>
  </listener>
  <listener>
    <listener-class>
			com.ultrapower.eoms.fulltext.common.startup.AutoListener
		</listener-class>
  </listener>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>setWebActionContext</filter-name>
    <filter-class>com.ultrapower.eoms.common.core.web.WebActionContextFilter</filter-class>
	<init-param>    
	  <param-name>excludedPage</param-name>    
	  <param-value>/lnkhzs/survey/question.jsp</param-value>    
	</init-param> 
  </filter>
  <filter>
    <filter-name>setInterceptConfigFilter</filter-name>
    <filter-class>com.ultrapower.eoms.ultrasm.web.InterceptConfigFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ecsideExport</filter-name>
    <filter-class>
			com.ultrapower.eoms.common.plugin.ecside.filter.ECSideFilter
		</filter-class>
    <init-param>
      <param-name>useEasyDataAccess</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>useEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
	
  </filter>
  <filter>
    <filter-name>gzipFilter</filter-name>
    <filter-class>   
            net.sf.ehcache.constructs.web.filter.GzipFilter   
        </filter-class>
  </filter>
  <filter>
    <filter-name>struts2Filter</filter-name>
    <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>setWebActionContext</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>setInterceptConfigFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>setWebActionContext</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ecsideExport</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.css</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.png</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.gif</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>*.json</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>struts2Filter</filter-name>
    <url-pattern>*.action</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>dbAdmin</servlet-name>
    <servlet-class>
			org.logicalcobwebs.proxool.admin.servlet.AdminServlet
		</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Ultra_DesignServlet</servlet-name>
    <servlet-class>com.ultrapower.eoms.workflow.design.servlet.DesignServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Ultra_DesignServlet</servlet-name>
    <url-pattern>/workflow/design/DesignServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dbAdmin</servlet-name>
    <url-pattern>/dbAdmin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SOAPMonitorService</servlet-name>
    <servlet-class>org.apache.axis.monitor.SOAPMonitorService</servlet-class>
    <init-param>
      <param-name>SOAPMonitorPort</param-name>
      <param-value>5001</param-value>
    </init-param>
    <load-on-startup>100</load-on-startup>
  </servlet>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>welcome.jsp</welcome-file>
    <welcome-file>/ultraform/editor/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/common/core/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/common/core/403.jsp</location>
  </error-page>
</web-app>